{
  "extends": [
    "next",
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
     // React specific rules
    "react/no-unescaped-entities": "off",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    
    "no-unused-vars": "warn",
    "no-console": "warn",
    "prefer-const": "warn",

    // ES6+ features
    "arrow-body-style": ["warn", "as-needed"],
    "object-shorthand": "warn",

    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}